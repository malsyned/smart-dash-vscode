{
	"name": "smart-dash",
	"displayName": "Smart-Dash",
	"description": "Smartly replace dashes with underscores in identifiers",
	"icon": "media/icon.png",
	"version": "1.0.0",
	"publisher": "malsyned",
	"repository": "https://github.com/malsyned/smart-dash-vscode",
	"license": "GPL-2.0-or-later",
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "smart-dash.insert",
				"title": "Insert Dash or Underscore"
			},
			{
				"command": "smart-dash.insertGreaterThan",
				"title": "Insert Greater-Than or Struct Access"
			}
		],
		"keybindings": [
			{
				"key": "-",
				"command": "smart-dash.insert",
				"when": "editorTextFocus"
			},
			{
				"key": "shift+.",
				"command": "smart-dash.insertGreaterThan",
				"when": "editorTextFocus"
			},
			{
				"key": "alt+-",
				"command": "type",
				"args": {
					"text": "-"
				},
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"title": "smart-dash",
			"properties": {
				"smart-dash.cLikeLanguages": {
					"type": "array",
					"default": [
						"c",
						"coffeescript",
						"cpp",
						"csharp",
						"cuda-cpp",
						"java",
						"javascript",
						"objective-c",
						"objective-cpp",
						"typescript"
					],
					"description": "Languages that need fix-ups for post-decrement \"--\" and struct access \"->\""
				},
				"smart-dash.languages": {
					"type": "array",
					"default": [
						"c",
						"coffeescript",
						"cpp",
						"csharp",
						"cuda-cpp",
						"java",
						"javascript",
						"lua",
						"objective-c",
						"objective-cpp",
						"perl",
						"perl6",
						"php",
						"python",
						"ruby",
						"typescript"
					],
					"description": "Languages to enable smart-dash functionality for"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.68.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.2",
		"@vscode/test-electron": "^2.1.3"
	},
	"dependencies": {},
	"extensionDependencies": [
		"draivin.hscopes"
	]
}
