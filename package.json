{
	"name": "smart-dash",
	"displayName": "smart-dash",
	"description": "Smartly replace dashes with underscores in identifiers",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "smart-dash.insert",
				"title": "Insert Dash or Underscore"
			},
			{
				"command": "smart-dash.insertGreaterThan",
				"title": "Insert Greater-Than or Struct Access"
			}
		],
		"keybindings": [
			{
				"command": "smart-dash.insert",
				"key": "-",
				"when": "editorTextFocus"
			},
			{
				"command": "smart-dash.insertGreaterThan",
				"key": "shift+.",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"title": "smart-dash",
			"properties": {
				"smart-dash.cLikeLanguages": {
					"type": "array",
					"default": [
						"c",
						"cpp",
						"objective-c",
						"objective-cpp",
						"csharp"
					],
					"description": "Languages that need fix-ups for post-decrement \"--\" and struct access \"->\""
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.68.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.2",
		"@vscode/test-electron": "^2.1.3"
	},
	"dependencies": {},
	"extensionDependencies": ["draivin.hscopes"]
}
